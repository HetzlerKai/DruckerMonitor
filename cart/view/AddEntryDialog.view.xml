<mvc:View controllerName="view.AddEntryDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<form:SimpleForm
		id="form"
		minWidth="600"
		maxContainerCols="2"
		editable="true"
		layout="ResponsiveGridLayout" >
		<Label
			text="{i18n>ADD_ENTRY_DIALOG_DATE_LABEL}" />
		<DatePicker
			id="DP1"
			enabled="false"
			valueFormat="yyyy-MM-dd"/>
		<Label
			text="{i18n>ADD_ENTRY_DIALOG_INK_LABEL}" />
		<Input
			id="Ink_input"
			type="Text"
			placeholder="{i18n>ADD_ENTRY_DIALOG_INK_INPUT}"/>
		<Label
			text="{i18n>ADD_ENTRY_DIALOG_DESCRIPTION_LABEL}" />
		<TextArea
			id="inputMail"
			rows="4"
			type="Email"
			placeholder="{i18n>ADD_ENTRY_DIALOG_DESCRIPTION_INPUT}" />
	</form:SimpleForm>
</mvc:View>