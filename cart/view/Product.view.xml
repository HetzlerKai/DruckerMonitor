<mvc:View
		controllerName="view.Product"
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.ui.layout.form"
		xmlns:control="control"
		xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
			id="page"
			title="{Name}"
			showNavButton="{device>/isPhone}"
			navButtonPress="handleNavButtonPress">
		<headerContent>
			<Button icon="sap-icon://log" press="fnOnLogOutPress"/>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
						icon="sap-icon://download"
						text="{i18n>PRODUCT_ADD_BUTTON_TEXT}"
						tooltip="{i18n>PRODUCT_ADD_BUTTON_TOOLTIP}"
						press="handleDownloadButtonPress"/>
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
					title="{Name}"
					number="{path : 'IP'}">
				<attributes>
					<ObjectAttribute
							text="{SupplierName}"/>
				</attributes>
				<firstStatus>
					<ObjectStatus
							text="{
							path : 'status',
							formatter : 'util.Formatter.statusText'
						}"
							state="{
							path : 'status',
							formatter : 'util.Formatter.statusState'
						}"/>
				</firstStatus>
			</ObjectHeader>
			<IconTabBar expandable="false" select="test">
				<items>
					<IconTabFilter
							icon="sap-icon://legend"
							iconColor="Positive"
							count="{product}"
							tooltip="General information"
							key="GeneralTab">
						<f:Form id="FormDisplay"
								minWidth="1024"
								maxContainerCols="2"
								editable="false">
							<f:title>
								<core:Title text="Details"/>
							</f:title>
							<f:layout>
								<f:ResponsiveGridLayout
										labelSpanL="3"
										labelSpanM="3"
										emptySpanL="4"
										emptySpanM="4"
										columnsL="1"
										columnsM="1"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="Name">
											<f:fields>
												<Text text="Xyx Drucker" id="nameText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Hersteller">
											<f:fields>
												<Text text="HP" id="HerstellerText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Modell">
											<f:fields>
												<Text text="HP 554" id="ModellText"/>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://bar-chart"
							iconColor="Positive"
							count="{product}"
							tooltip="Statistic about this printer"
							key="ChartStatistic">
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://line-chart"
							iconColor="Positive"
							count="{product}"
							tooltip="Paper consumption of this printer"
							key="ChartPaper">
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://legend"
							iconColor="Positive"
							count="{product}"
							tooltip="History about this printer"
							key="History">
						<Table>
							<columns>
								<Column width="10%">
									<Text text="Datum"/>
								</Column>
								<Column width="10%">
									<Text text="Patrone"/>
								</Column>
								<Column width="76%">
									<Text text="Kommentar"/>
								</Column>
								<Column width="4%">
									<core:Icon src="sap-icon://add" press="handlePressAddTableEntry"></core:Icon>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Label text="15.10.15"></Label>
										<Label text="Cyan"></Label>
										<Label text="Cyan Patrone gewechselt und Filter getauscht"></Label>
									</cells>
								</ColumnListItem>
								<ColumnListItem>
									<cells>
										<Label text="15.10.16"></Label>
										<Label text="Magenta"></Label>
										<Label text="Magenta Patrone gewechselt"></Label>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>