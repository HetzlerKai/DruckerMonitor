<mvc:View
	controllerName="view.Product"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
		title="{Name}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" >
		<headerContent>
			<Button icon="sap-icon://log"/>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://download"
					text="{i18n>PRODUCT_ADD_BUTTON_TEXT}"
					tooltip="{i18n>PRODUCT_ADD_BUTTON_TOOLTIP}"
					press="handleDownloadButtonPress" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{Name}"
				number="{path : 'IP'}">
				<attributes>
					<ObjectAttribute
						text="{SupplierName}" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{
							path : 'status',
							formatter : 'util.Formatter.statusText'
						}"
						state="{
							path : 'status',
							formatter : 'util.Formatter.statusState'
						}" />
				</firstStatus>
			</ObjectHeader>
			<IconTabBar expandable="false" select="test">
				<items>
					<IconTabFilter
							icon="sap-icon://legend"
							iconColor="Positive"
							count="{product}"
							tooltip="General information"
							key="GeneralTab">
						<VBox alignItems="Center">
							<Image
									src= "{path : 'PictureUrl'}"
									decorative="true"
									densityAware="false" />
						</VBox>
						<Text text="{ShortDescription}">
						</Text>
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://bar-chart"
							iconColor="Positive"
							count="{product}"
							tooltip="Statistic about this printer"
							key="ChartStatistic">
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://line-chart"
							iconColor="Positive"
							count="{product}"
							tooltip="Paper consumption of this printer"
							key="ChartPaper">
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>