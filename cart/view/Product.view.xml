<mvc:View
		controllerName="view.Product"
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.ui.layout.form"
		xmlns:control="control"
		xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
			id="page"
			title="{i18n>SHELL_TITLE}">
		<headerContent>
			<Button icon="sap-icon://log" press="fnOnLogOutPress"/>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
						icon="sap-icon://download"
						text="{i18n>PRODUCT_ADD_BUTTON_TEXT}"
						tooltip="{i18n>PRODUCT_ADD_BUTTON_TOOLTIP}"
						press="handleDownloadButtonPress"/>
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
					title="{DruckerData>name}"
					number="{path : 'DruckerData>ip'}">
				<attributes>
					<ObjectAttribute
							text="{DruckerData>hersteller}"/>
				</attributes>
				<firstStatus>
					<!--TODO: State has to be implemented-->
					<ObjectStatus
							text="{
								parts : [
									{path : 'DruckerData>status'},
									{path : 'i18n>NO_STATE'}
								],
								formatter : 'util.Formatter.statusText'
							}"
							state="{
							path : 'DruckerData>status',
							formatter : 'util.Formatter.statusState'
						}"
							tooltip="{i18n>CURRENT_INK_STATE}"/>
				</firstStatus>
			</ObjectHeader>
			<IconTabBar expandable="false" select="showPrinterData">
				<items>
					<IconTabFilter
							icon="sap-icon://legend"
							iconColor="Positive"
							tooltip="General information"
							key="GeneralTab">
						<f:Form id="FormDisplay"
								minWidth="1024"
								maxContainerCols="2"
								editable="false">
							<f:title>
								<core:Title text="{i18n>GENERAL_TAB_FORM_TITLE}"/>
							</f:title>
							<f:layout>
								<f:ResponsiveGridLayout
										labelSpanL="3"
										labelSpanM="3"
										emptySpanL="4"
										emptySpanM="4"
										columnsL="1"
										columnsM="1"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="ID">
											<f:fields>
												<Text text="{DruckerData>id}" id="idText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Name">
											<f:fields>
												<Text text="{DruckerData>name}" id="NameText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Hersteller">
											<f:fields>
												<Text text="{DruckerData>hersteller}" id="HerstellerText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Typ">
											<f:fields>
												<Text text="{DruckerData>typ}" id="TypText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="MAC">
											<f:fields>
												<Text text="{DruckerData>mac}" id="MacText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="IP">
											<f:fields>
												<Text text="{DruckerData>ip}" id="IPText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Raum">
											<f:fields>
												<Text text="{DruckerData>raum}" id="RaumText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Seriennummer">
											<f:fields>
												<Text text="{DruckerData>seriennummer}" id="SeriennummerText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Cyan">
											<f:fields>
												<Text text="{DruckerData>toner_cyan}" id="CyanText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Gelb">
											<f:fields>
												<Text text="{DruckerData>toner_gelb}" id="GelbText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Magenta">
											<f:fields>
												<Text text="{DruckerData>toner_magenta}" id="MagentaText"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Schwarz">
											<f:fields>
												<Text text="{DruckerData>toner_schwarz}" id="SchwarzText"/>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://bar-chart"
							iconColor="Positive"
							tooltip="Statistic about this printer"
							key="ChartStatistic">
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://line-chart"
							iconColor="Positive"
							tooltip="Paper consumption of this printer"
							key="ChartPaper">
					</IconTabFilter>
					<IconTabFilter
							icon="sap-icon://history"
							iconColor="Positive"
							tooltip="History about this printer"
							key="History">
						<Table headerText="{i18n>TABLE_HEADER_TEXT}" items="{History>/}">
							<columns>
								<Column width="10%">
									<Text text="{i18n>TABLE_COLUMN_DATUM}"/>
								</Column>
								<Column width="10%">
									<Text text="{i18n>TABLE_COLUMN_PATRONE}"/>
								</Column>
								<Column width="76%">
									<Text text="{i18n>TABLE_COLUMN_KOMMENTAR}"/>
								</Column>
								<Column width="4%">
									<core:Icon src="sap-icon://add" press="handlePressAddTableEntry"></core:Icon>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Label text="{History>Datum}"></Label>
										<Label text="{History>Patrone}"></Label>
										<Label text="{History>Beschreibung}"></Label>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>